{
    name: "zcanvas",
    language: "zig",
    version: "0.0.1",
    description: "A cross platform HTML Canvas implementation in Zig",
    author: "VExcess <github.com/vexcess>",
    modules: {
        demo_software: {
            root: "demo/demo-software.zig",
            dependencies: [
                "zcanvas",
                "vexlib"
            ]
        },
        demo_cairo: {
            root: "demo/demo-cairo.zig",
            dependencies: [
                "zcanvas",
                "vexlib"
            ]
        },
        zcanvas: {
            type: "lib",
            root: "src/zcanvas.zig",
            dependencies: [
                ["SDL2"],
                ["cairo"],
                ["libc"],
                "vexlib",
            ]
        },
        $importAll: [{
            local: "../vexlib",
            remote: "https://github.com/vExcess/zig-vexlib"
        }]
    },
    build: {
        default: ["demo_cairo"],
        demo_cairo: ["demo_cairo"],
        demo_software: ["demo_software"],
    }
}